<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="daihocnhatrang.duongthianhhong.blueycoffee.TrangChu">
    <!-- Thanh menu phía trên -->
    <top>
        <MenuBar>
            <Menu text="Hệ Thống">
                <MenuItem text="Đăng xuất" onAction="#handleLogout"/>
                <MenuItem text="Thoát" onAction="#handleExit"/>
            </Menu>
            <Menu text="Chức Năng">
                <MenuItem text="Quản lý nhân viên" onAction="#handleManageEmployees"/>
                <MenuItem text="Quản lý sản phẩm" onAction="#handleManageProducts"/>
                <MenuItem text="Báo cáo doanh thu" onAction="#handleViewReports"/>
            </Menu>
            <Menu text="Trợ Giúp">
                <MenuItem text="Hướng dẫn sử dụng" onAction="#handleHelp"/>
                <MenuItem text="Thông tin phần mềm" onAction="#handleAbout"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Khu vực trung tâm -->
    <center>
        <VBox spacing="10" alignment="TOP_CENTER">
            <Label text="Quản Lý Quán Coffee" />
            <TableView fx:id="tableView">
                <columns>
                    <TableColumn text="ID" fx:id="colId"/>
                    <TableColumn text="Tên Sản Phẩm" fx:id="colProductName"/>
                    <TableColumn text="Giá" fx:id="colPrice"/>
                    <TableColumn text="Số Lượng" fx:id="colQuantity"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Thanh công cụ phía dưới -->
    <bottom>
        <HBox alignment="CENTER" spacing="15" padding="10">
            <Button text="Thêm" onAction="#handleAdd" prefWidth="100"/>
            <Button text="Sửa" onAction="#handleEdit" prefWidth="100"/>
            <Button text="Xóa" onAction="#handleDelete" prefWidth="100"/>
        </HBox>
    </bottom>
</BorderPane>
