<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f2f2f2;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="daihocnhatrang.duongthianhhong.blueycoffee.Controller.NhanVienController">
    <children>
        <VBox layoutX="50.0" layoutY="50.0" spacing="20.0">
            <Label text="ĐĂNG KÝ NHÂN VIÊN" font="Arial 24" style="-fx-text-fill: darkblue;"/>
            <Label text="Tên đăng nhập:" font="Arial 16"/>
            <TextField fx:id="username" promptText="Nhập tên đăng nhập" prefHeight="35.0" style="-fx-background-radius: 10; -fx-padding: 5;" />

            <Label text="Mật khẩu:" font="Arial 16"/>
            <PasswordField fx:id="password" promptText="Nhập mật khẩu" prefHeight="35.0" style="-fx-background-radius: 10; -fx-padding: 5;" />
            <Label text="Họ tên:" font="Arial 16"/>
            <TextField fx:id="fullName" promptText="Nhập họ tên" prefHeight="35.0" style="-fx-background-radius: 10; -fx-padding: 5;" />

            <Label text="Email:" font="Arial 16"/>
            <TextField fx:id="email" promptText="Nhập email" prefHeight="35.0" style="-fx-background-radius: 10; -fx-padding: 5;" />

            <!-- Số điện thoại -->
            <Label text="Số điện thoại:" font="Arial 16"/>
            <TextField fx:id="phone" promptText="Nhập số điện thoại" prefHeight="35.0" style="-fx-background-radius: 10; -fx-padding: 5;" />

            <!-- Nút đăng ký -->
            <Button fx:id="btnRegister" text="Đăng ký" onAction="#handleRegister" prefHeight="40.0" style="-fx-background-color: blue; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10;"/>

        </VBox>
    </children>
</AnchorPane>
